!!! Strict
%html
  %head
    %title aether
    %link{:href=>"/stylesheets/screen.css", :media=>"screen", :rel=>"stylesheet", :type=>"text/css"}
    %script{ :src => "http://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.min.js", :type => "text/javascript"}
    %script{:src => "http://maps.google.com/?file=api&amp;v=2.x&key=ABQIAAAANhns9HfwQK2FOiJknFe_RBQ1bmiFIOX-FukFLYVl-b0g3SpkNRQKTD1S460t8SmwYB44diqyQepOOQ", :type => "text/javascript"}
    %script{:src => "/javascript/markermanager_packed.js", :type => "text/javascript"}
    %script{:src => "/javascript/jquery.tablesorter.js", :type => "text/javascript"}
    %script{:src => "/javascript/jquery.tablesorter.pager.js", :type => "text/javascript"}
    %script{:src => "/javascript/jquery.dotimeout.min.js", :type => "text/javascript"}
    %script{:src => "/javascript/jquery.debug.js", :type => "text/javascript"}
    %script{:src => "/javascript/aether.js", :type => "text/javascript"}
  %body
    .container
      #header
        %h1
          aether!
        %img{:src => "images/airplane_thumb.jpg"}
      #left_bar
        %ul.navigation
          %li Airports
          %li Airlines
          %li Routes
      #content
        #mapOuter
          %ul.topNav
            %li
              %a{:href => "#", :alt => "Click to toggle", :id => 'mapToggle'}
                Toggle Map
            %li
              |
            %li
              %a{:href => "#", :alt => "Click to scroll", :id => 'toTable'}
                Jump to Table
          #map
        #results
          #loading
            %img{:src => "images/loader.gif"}
          #pager.pager
            %form
              %span.first &laquo;
              %input.pagedisplay{:type => "text", :text => "1/1"}
              %span.prev &lsaquo;
              %span.next &rsaquo;
              %span.last &raquo;
              %select.pagesize{:name => "pagesize"}
                %option{:value => 10} 10
                %option{:value => 20} 20
                %option{:value => 30} 30
                %option{:value => 40} 40
                %option{:selected => true, :value => 50} 50
                %option{:value => 50} 50
          %table#data
            %thead
            %tbody
          %a{:href => "#", :alt => "Click to scroll", :id => 'toTop'} Top
    :javascript
      $(document).ready(function(){
        load();
      });
      $(window).unload(function(){
        unload();
      });
          